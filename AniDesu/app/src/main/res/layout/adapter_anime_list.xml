<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="@dimen/new_style_height"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/anime_model_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?selectableItemBackground"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:background="@drawable/toolbar_shadow">

        <TextView
            android:id="@+id/anime_model_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/anime_model_rating"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Lead Tilte For What Ever Anime This May Be" />

        <TextView
            android:id="@id/anime_model_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_star_border_white_18dp"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:textSize="15sp"
            tools:text="4.5" />

        <TextView
            android:id="@+id/anime_model_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:typeface="monospace"
            tools:text="TV" />

        <TextView
            android:id="@+id/anime_model_relation_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            tools:text="Prequel" />

    </RelativeLayout>

</FrameLayout>